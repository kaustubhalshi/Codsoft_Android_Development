<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F5F5F5">

    <!-- Top Bar with Back Button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Quiz Result"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Result Details -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        android:background="@drawable/result_background"
        android:padding="16dp">

        <TextView
            android:id="@+id/attemptedQuestionsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Attempted Questions: "
            android:textSize="18sp"
            android:textColor="@color/black"
            android:padding="8dp" />

        <TextView
            android:id="@+id/correctQuestionsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Correct Questions: "
            android:textSize="18sp"
            android:textColor="@color/black"
            android:padding="8dp" />

        <TextView
            android:id="@+id/incorrectQuestionsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Incorrect Questions: "
            android:textSize="18sp"
            android:textColor="@color/black"
            android:padding="8dp" />

        <TextView
            android:id="@+id/scoreText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Score: "
            android:textSize="18sp"
            android:textColor="@color/black"
            android:padding="8dp" />
    </LinearLayout>

    <!-- Finish Button -->
    <Button
        android:id="@+id/finishButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Finish"
        android:textSize="18sp"
        android:layout_marginTop="24dp"
        android:padding="12dp"
        android:backgroundTint="@color/primaryColor"
        android:textColor="@color/white" />
</LinearLayout>
